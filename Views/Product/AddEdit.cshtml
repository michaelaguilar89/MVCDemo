@model MVCDemo.Dto_s.ProductDto
@{
}
<div class="row">
    <div class="col-md-6 mx-auto 0">
        @if (Model.Id > 0)
        {
            <h3 class="text-center text-primary">Edit Product</h3>
        }
        else
        {
            <h3 class="text-center text-primary">Create Product</h3>
        }
        <form asp-action="AddEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div asp-for="CategorieId" class="control-label">Categorie</div>
                <select asp-for="CategorieId" class="form-control"
                        asp-items="@(Model.Categories != null ? new SelectList(Model.Categories,"Id","Name") : new SelectList(new List<SelectListItem>()))">
                    <option value="">--Select--</option>
                </select>

                <span asp-validation-for="CategorieId" class="text-danger"></span>
            </div>
            <div class="form-group text-center pt-3">
                <!-- Button Go Back -->
                <a href="@Url.Action("Index", "Product")" class="btn btn-success">Go Back</a>
               <!--button save-->
                <button type="submit" class="btn btn-primary mx-5">Save</button>
            </div>
        </form>

    </div>
</div>